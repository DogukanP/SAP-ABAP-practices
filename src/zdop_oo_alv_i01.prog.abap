MODULE user_command_0100 INPUT.
  CASE SY-UCOMM.
    WHEN 'BACK'.
      SET SCREEN 0.
    WHEN 'EXIT'.
      SET SCREEN 0.
    WHEN 'CANCEL'.
      LEAVE SCREEN.
  ENDCASE.
ENDMODULE.
